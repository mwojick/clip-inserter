{
	"manifest_version": 3,
	"name": "Clip Inserter",
	"version": "1.0.0",
	"action": { "default_popup": "index.html" },
	"icons": {
		"16": "src/assets/clipboard16.png",
		"32": "src/assets/clipboard32.png",
		"64": "src/assets/clipboard64.png",
		"128": "src/assets/clipboard128.png"
	},
	"options_ui": {
		"page": "index.html",
		"open_in_tab": true
	},
	"permissions": [
		"tabs",
		"activeTab",
		"scripting",
		"clipboardRead",
		"clipboardWrite",
		"storage",
		"offscreen",
		"webNavigation"
	],
	"host_permissions": ["http://*/", "https://*/*"],
	"background": {
		"service_worker": "src/service-worker/worker.ts"
	}
}
